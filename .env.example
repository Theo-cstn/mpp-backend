# Configuration Backend MPP
# ==========================================

# Environnement
NODE_ENV=production

# Serveur
PORT=8000
HOST=0.0.0.0

# URLs 
FRONTEND_URL=https://mpp-frontend.cluster-ig3.igpolytech.fr

# Base de données PostgreSQL
# (Dokku va automatiquement injecter DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mpp
DB_POOL_SIZE=10

# Sécurité
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=https://mpp-frontend.cluster-ig3.igpolytech.fr

# Logging
LOG_LEVEL=info

# WebSocket
WS_HEARTBEAT_INTERVAL=30000